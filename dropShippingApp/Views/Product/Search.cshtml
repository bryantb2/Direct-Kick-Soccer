
@{ ViewData["Title"] = "Search"; }
@model BrowseViewModel
@inject ISortRepo sortRepo

    <section class="pt-5">
        <div>
            <form asp-controller="Product" asp-action="Search" method="get">
                <div class="d-flex flex-row justify-content-center">
                    <h1 class="p-2">Search for Products:</h1>
                    <input class="p-2" type="text" placeholder="Enter a Search Term" asp-for=@Model.SearchString />
                    <button class="btn" type="submit">Search</button>
                </div>
            </form>

            @if (Model != null)
            {
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sort Products
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @if (Model.SearchString != null)
                        {
                            @foreach (var sort in sortRepo.Sorts)
                            {
                                <a class="dropdown-item" asp-controller="Product" asp-action="SortProducts" asp-route-sortId=@sort.ProductSortID asp-route-searchTerm=@Model.SearchString>@sort.SortName</a>
                            }
                        }
                        else
                        {
                            @foreach (var sort in sortRepo.Sorts)
                            {
                                <a class="dropdown-item" asp-controller="Product" asp-action="SortProducts" asp-route-sortId=@sort.ProductSortID asp-route-categoryId=@Model.CurrentCategory.ProductCategoryID>@sort.SortName</a>
                            }
                        }
                    </div>
                </div>
            }
        </div>

        <br />
        <br />
        <hr />

        <div class="text-center p-2">
            @if (Model == null)
            {
                <h5>Search for Products to Get Started</h5>
            }
            else if (Model.SearchString != null)
            {
                <h5>Results for '@Model.SearchString'</h5>
            }
            else if (Model.CurrentCategory != null)
            {
                <h5>Browsing @Model.CurrentCategory.Name Products</h5>
            }
            else
            {
                <h5>Search for Products or Browse our Sections</h5>
            }
        </div>

        @if (Model != null)
        {
            @if (Model.Products.Count != 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Product Title</th>
                            <th>Price</th>
                            <th>SKU</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>
                                    <img width="100" src=@product.CustomImagePNG />
                                </td>
                                <td>@product.ProductTitle</td>
                                <td>@product.CurrentPrice.ToString("c")</td>
                                <td>@product.BaseProduct.SKU</td>
                                <td>
                                    <a class="btn btn-link" style="display:inline-block" asp-controller="Product" asp-action="ViewProduct" asp-route-productId="@product.CustomProductID">View Product</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <div class="row">
                    @if (Model.PreviousPageExists)
                    {
                        @if (Model.SearchString != null)
                        {
                            <div class="col-4 text-left">
                                <a class="btn btn-link text-primary" asp-controller="Product" asp-action="BackToFirstPage" asp-route-searchTerm=@Model.SearchString>First Page</a>
                            </div>
                        }
                        else
                        {
                            <div class="col-4 text-left">
                                <a class="btn btn-link text-primary" asp-controller="Product" asp-action="BackToFirstPage" asp-route-categoryId=@Model.CurrentCategory.ProductCategoryID>First Page</a>
                            </div>
                        }

                    }
                    @if (Model.CurrentPage != 0)
                    {
                        @if (Model.SearchString != null)
                        {
                            <div class="col-4 text-center">
                                <a class="btn btn-link text-primary" asp-controller="Product" asp-action="PreviousPage" asp-route-currentPage=@Model.CurrentCategory asp-route-searchTerm=@Model.SearchString>Previous Page</a>
                            </div>
                        }
                        else
                        {
                            <div class="col-4 text-center">
                                <a class="btn btn-link text-primary" asp-controller="Product" asp-action="PreviousPage" asp-route-currentPage=@Model.CurrentCategory asp-route-categoryId=@Model.CurrentCategory.ProductCategoryID>Previous Page</a>
                            </div>
                        }
                    }
                    @if (Model.NextPageExists)
                    {
                        @if (Model.SearchString != null)
                        {
                            <div class="col-4 text-right">
                                <a class="btn btn-link text-primary" asp-controller="Product" asp-action="NextPage" asp-route-currentPage=@Model.CurrentPage asp-route-categoryId=@Model.CurrentCategory.ProductCategoryID>Next Page</a>
                            </div>
                        }
                        else
                        {
                            <div class="col-4 text-right">
                                <a class="btn btn-link text-primary" asp-controller="Product" asp-action="NextPage" asp-route-currentPage=@Model.CurrentPage asp-route-categoryId=@Model.CurrentCategory.ProductCategoryID>Next Page</a>
                            </div>
                        }
                    }
                </div>
            }
            else
            {
                <div class="text-center">
                    <h2>0 Products Found</h2>
                </div>
            }
        }
    </section>
