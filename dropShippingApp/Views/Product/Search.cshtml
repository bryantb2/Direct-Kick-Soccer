            <th>              New Price            </th>
            <th>                Custom Image PNG           </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (dropShippingApp.Models.CustomProduct c in Model)
        {
            <tr>
                <td>                    @Html.DisplayFor(modelItem => c.ProductTitle)                </td>
                <td>                    @Html.DisplayFor(modelItem => c.ProductDescription)                </td>
                <td>                    @Html.DisplayFor(modelItem => c.PricingHistory)                </td>
                <td>                    @Html.DisplayFor(modelItem => c.CustomImagePNG)                </td>
                
            </tr>
        }
    </tbody>
</table>
