@{
    Layout = "_Layout";
    ViewData["Title"] = "Team Management";
}
@model TeamManagementVM
@inject UserManager<AppUser> UserManager

<link rel="stylesheet" type="text/css" href="~/css/TeamStyles.css" />

<section>
    <div class="view-team-banner-container">
        <img class="view-team-banner-img" src=@Model.Team.TeamBannerPNG />
        <div class="view-team-banner-text">
            <h1>[Team Image]</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <partial name="_InfoCardPartial.cshtml" model='@new InfoCardVM { Title = "Dashboard Info", MainText = "Welcome to the management dashboard " + @UserManager.GetUserName(User) }' />
        </div>
        <div class="col-4">
            <partial name="_StatsCardPartial.cshtml" model='@new StatsCardVM { StatNumber = Model.MonthlySales, StatName = "Monthly Sales" }' />
        </div>
        <div class="col-4">
            <partial name="_StatsCardPartial.cshtml" model='@new StatsCardVM { StatNumber = Model.WeeklySales, StatName = "Weekly Sales" }' />
        </div>
        <div class="col-4">
            <partial name="_StatsCardPartial.cshtml" model='@new StatsCardVM { StatNumber = Model.LifeTimeSales, StatName = "Lifetime Sales" }' />
        </div>
        <div class="col-6">
            <partial name="_StatsCardPartial.cshtml" model='@new ButtonCardVM { ControllerName="Team", ActionName = "UpdateBanner", ButtonText = "Change Banner", TitleText = "Updated Banner Image" }' />
        </div>
        <div class="col-6">
            <partial name="_StatsCardPartial.cshtml" model='@new ButtonCardVM { ControllerName="Team", ActionName = "ReplaceSettings", ButtonText = "Change Settings", TitleText = "Updated Basic Team Info" }' />
        </div>
        <div class="col-12">
            <partial name="_InfoCardPartial.cshtml" model='@new InfoCardVM { Title = "Management Actions", MainText = "Using the tools below, you can add, remove, or update your team products and groups." }' />
        </div>
        <div class="col-6">
            Card 1
        </div>
        <div class="col-6">
            Card 2
        </div>
        <div class="col-12">
            Card 3
        </div>
    </div>
</section>
